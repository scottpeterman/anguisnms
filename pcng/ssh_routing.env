#windows
REM Command Prompt
set SSH_USE_ROUTING=true
set SSH_PROXY_HOST=
set SSH_PROXY_USER=
set SSH_PROXY_PASS=**********
set SSH_ROUTING_RULES=[{"match": "10.0.0.0/16", "action": "proxy"}]

# Basic proxy settings
export SSH_PROXY_HOST="jump.company.com"
export SSH_PROXY_PORT="22"
export SSH_PROXY_USER="jumpuser"
export SSH_PROXY_PASS="jumppass"
export SSH_PROXY_KEY="/path/to/proxy/key"

# Routing rules (JSON format for flexibility)
export SSH_ROUTING_RULES='[
  {"match": "10.0.0.0/8", "action": "direct"},
  {"match": "192.168.1.0/24", "action": "proxy"},
  {"match": "*.internal.company.com", "action": "proxy"},
  {"match": "*", "action": "deny"}
]'

# Simple enable/disable flag
export SSH_USE_ROUTING="true"